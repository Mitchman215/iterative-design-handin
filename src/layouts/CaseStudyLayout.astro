
---
import Layout from "../layouts/Layout.astro"

const { frontmatter } = Astro.props;
---

<Layout title={`${frontmatter.name} Case Study`}>
  <main>
    <slot />

  </main>
</Layout>
<style is:global>
  /* Typography */
  body {
    font-size: 1.125rem;
  }
  ul,
	ol {
		list-style: inside;
	}

  /* Images */
  img {
    border: 1px solid;
    margin: 0 auto;
    /* Image captions */
    + em {
      font-size: 1rem;
      display: block;
      text-align: center;
      margin-bottom: 0.75rem;
    }
  }

  /* Spacing */
  h1, h2 {
    margin-top: 1rem;
  }
  h3 {
    margin-top: 0.5rem;
  }
  main {
    margin-bottom: 5rem;
  }
  p + p {
    margin-top: 0.375rem;
  }

  /* Tables */
  table {
    table-layout: fixed;
    width: 100%;
    border-collapse: collapse;
    border: 2px solid black;
  }

  th, td {
    padding: 5px 10px;
    border: 1px solid rgb(0, 0, 0, 0.6)
  }

  tbody td {
    text-align: center;
  }

  th, tbody tr:nth-child(even) {
    background-color: rgb(225, 225, 225, 0.8);
  }
</style>